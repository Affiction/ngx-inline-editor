{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "baseUrl": ".",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2015", "es2017"],
    "esModuleInterop": true,
    "paths": {
      "@qontu/ngx-inline-editor": ["src/index"],
      "@qontu/ngx-inline-editor/inputs": ["src/inputs/src/"],
      "@inputs/*": ["src/inputs/src/*"],
      "@xqontu/ngx-inline-editor": ["dist/"],
      "@xqontu/ngx-inline-editor/*": ["dist/*"]
    }
  },
  "exclude": ["dist"]
}
